#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('tellus-backend:server');
var http = require('http');
const https = require('https');

var registryEntitiesEventsLoader = require('../loaders/registryEntitiesEventsLoader');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '5002');
app.set('port', port);

/**
 * Create HTTP server.
 */
var server;
if (process.env['USE_SSL'] === '1') {
  var options = {
      key: fs.readFileSync(process.env['SSL_KEY']),
      cert: fs.readFileSync(process.env['SSL_CERT']),
  };
  server = https.createServer(options, app);
} else {
  server = http.createServer(app);
}

/**
 * 
 */

var registry_entities_events_loader = new registryEntitiesEventsLoader();
registry_entities_events_loader.sync_registry_entities_events().then(function () {

  /**
   * Listen on provided port, on all network interfaces.
   */

  server.listen(port);
  server.on('error', onError);
  server.on('listening', onListening);
}).catch(console.log);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
